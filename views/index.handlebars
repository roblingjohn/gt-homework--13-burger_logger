<h1>Eat-Da-Burger!</h1>

<div class="row" id="columns">
    <div class="column">
        <h2 class="column-header">Uneaten Burgers</h2>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                <li class="uneaten">{{burger_name}} <button class="eat-btn" data-id="{{id}}">Eat burger!</button></li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="column">
        <h2 class="column-header">Eaten Burgers</h2>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                <li class="eaten">{{burger_name}}</li>
                {{/if}}
            {{/each}}

        </ul>
    </div>
</div>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="addBurger">Burger name:</label>
    <input type="text" id="addBurger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>