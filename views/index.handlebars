<h1>Eat Da Burger!</h1>

<h2>Uneaten Burgers</h2>
<ul>
    {{#each burgers}}
        {{#unless devoured}}
        <li>{{burger_name}} <button class="eat burger" data-id="{{id}}">Eat burger!</button></li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Eaten Burgers</h2>
<ul>
    {{#each burgers}}
        {{#if devoured}}
        <li>{{burger_name}}</li>
        {{/if}}
    {{/each}}

</ul>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>